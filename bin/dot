#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

export DOTFILES_HOME="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

if [ $# -eq 0 ]; then
    echo "No arguments provided, continuing script execution..."
    # Add the rest of your script here
else
  while test $# -gt 0; do
    case "$1" in
      "-h"|"--help")
        displayUsageAndExit
        ;;
      "-e"|"--edit")
        exec "$EDITOR" "$DOTFILES_HOME"
        exit
        ;;
      *)
        echo "Invalid option: $1"
        displayUsageAndExit
        ;;
    esac
    shift
  done
fi

# Update dotfiles themselves
echo "› git pull"
git -C $DOTFILES_HOME pull

# Set macOS defaults
$DOTFILES_HOME/macos/set-defaults.sh

# Install homebrew
# $ZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

echo "› brew upgrade"
brew upgrade

# Install software
echo "› script/install"
$DOTFILES_HOME/script/install